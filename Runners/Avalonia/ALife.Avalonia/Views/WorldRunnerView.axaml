<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:ALife.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ALife.Avalonia.Views.WorldRunnerView">
  <StackPanel Orientation="Horizontal" Background="Green">
    <StackPanel Width="100">
      <TextBlock Text="{Binding #slider.Value}" HorizontalAlignment="Center"/>
      <Slider x:Name="slider" Minimum ="500" Maximum="2000" />
    </StackPanel>
    <ScrollViewer Background="Wheat">
      <Viewbox Stretch="Uniform" Width="{Binding #slider.Value}" Height="{Binding #slider.Value}">
        <controls:WorldCanvas Height="1000" Width="1000">
        </controls:WorldCanvas>
      </Viewbox>
    </ScrollViewer>
  </StackPanel>
</UserControl>